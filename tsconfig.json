{
    "extends": "@tsconfig/node22/tsconfig.json",
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "declaration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "target": "ESNext",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "skipLibCheck": true,
        "esModuleInterop": false,
        "strictNullChecks": false,
        "resolveJsonModule": true,
        "noImplicitAny": false,
        "lib": ["esnext", "dom"],
        "types": ["node"],
        "paths": {
            "@models": ["src/models"],
            "@models/*": ["src/models/*"],
            "@modules": ["src/modules"],
            "@modules/*": ["src/modules/*"],
            "@services": ["src/services"],
            "@services/*": ["src/services/*"],
            "@controllers": ["src/controllers"],
            "@controllers/*": ["src/controllers/*"],
            "@contracts": ["src/contracts"],
            "@contracts/*": ["src/contracts/*"],
            "@entities": ["src/entities"],
            "@entities/*": ["src/entities/*"],
            "@gateways": ["src/gateways"],
            "@gateways/*": ["src/gateways/*"],
            "@protos": ["src/protos"],
            "@protos/*": ["src/protos/*"],
            "@generated": [".generated"],
            "@generated/*": [".generated/*"],
            "@g": [".generated"],
            "@g/*": [".generated/*"]
        }
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "dist", "src/protos", "**/*.spec.ts"]
}
